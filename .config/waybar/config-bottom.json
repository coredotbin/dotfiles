{
	"layer": "top",
	"position": "bottom",
	"output": "eDP-1",
	"height": 30,
	"width": 1920,
	"modules-left": ["custom/spotify"],
	"modules-center": [],
	"modules-right": ["custom/drive", "custom/temp", "cpu", "memory"],
	"custom/spotify": {
		"format": "<span font='Font Awesome'></span><span font='Fira Code'>{}</span>",
		"max-length": 40,
		"exec": "$HOME/.config/waybar/mediaplayer.py",
		"exec-if": "pgrep spotify",
	"on-click": "playerctl play-pause"
	},
	"custom/drive": {
		"exec": "$HOME/.scripts/drive-root.sh",
		"interval": 600,
		"format": "{} "
	}, 
	"custom/temp": {
		"exec": "$HOME/.scripts/temp.sh",
		"interval": 5,
		"format": "{} "
	},
	"cpu": {
		"interval": 10,
		"format": "{}% ",
		"max-length": 10
	},
	"memory": {
		"interval": 10,
		"format": "{}% <span font='Font Awesome'></span>",
		"max-length": 10
	}
}
